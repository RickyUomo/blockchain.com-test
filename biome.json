{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
      "ignore": ["**/node_modules/**", "**/dist/**"]
    },
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "a11y": {
          "useKeyWithClickEvents": "off"
        },
        "suspicious": { "noExplicitAny": "off" }
      }
    },
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120
    }
  }
  